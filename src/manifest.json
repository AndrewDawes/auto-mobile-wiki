{
  "manifest_version": 3,
  "name": "auto-mobile-wiki",
  "description": "Automatically switch to the mobile version of Wikipedia",
  "version": "1.0",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://*.wikipedia.org/wiki/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "icons": {
    "128": "icon128.png"
  }
}